<body data-mp-track-visit="signin">

  <!-- App Capsule -->
  <div id="appCapsule" class="mb-2">

    <div class="login-form">
      <div class="section">
        <%= image_tag "signin_illustration.jpg", class: "form-image" %>
      </div>
      <div class="section mt-3">
        <h2>Acesse sua conta</h2>
      </div>
      <div class="section mt-1 mb-5">
        <%= form_tag authenticate_path, onsubmit: "mp_track('#{MixPanel::SIGNIN_SUBMIT}');" %>
          <div class="form-group boxed">
            <div class="input-wrapper">
              <input type="text" name="session[username]" class="form-control" placeholder="Username">
              <i class="clear-input">
                <ion-icon name="close-circle"></ion-icon>
              </i>
            </div>
          </div>

          <div class="form-group boxed">
            <div class="input-wrapper">
              <input type="password" class="form-control" name="session[password]" placeholder="Senha">
              <i class="clear-input">
                <ion-icon name="close-circle"></ion-icon>
              </i>
            </div>
          </div>

          <button type="submit" class="btn btn-primary btn-block btn-lg mt-2">Acessar conta</button>
          <div class="form-links mt-2">
            <div>
              <a href="esqueci_senha.html">Esqueci minha senha</a>
            </div>
            <div><a href="signin.html" class="text-muted">Criar uma conta</a></div>
          </div>

        </form>
      </div>
    </div>


  </div>
  <!-- * App Capsule -->

</body>