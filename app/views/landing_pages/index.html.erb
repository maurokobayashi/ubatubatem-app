<body data-mp-track-visit="<%= MixPanel::HOME_VIEW %>">

  <%= render "app_components/header", classes: "bg-primary text-light flat", left_button: :blank, right_buttons: [:options] %>

  <!-- App Capsule -->
  <div id="appCapsule" class="mb-5">

    <!-- Section Busca -->
    <div class="section full pb-1 mb-4 bg-primary">
      <div class="section">
        <%= render "app_components/search_form", classes: "border-none", size: "sm" %>
      </div>
    </div>

    <!-- Section Curadoria -->
    <div class="header-large-title">
      <h1 class="title">Explore</h1>
      <h4 class="subtitle">pequenos neg√≥cios com o charme de ubatuba</h4>
    </div>

    <div class="carousel-multiple owl-carousel owl-theme mt-3">
      <% @lists.each do |list| %>
      <a href="<%= list_path list.alias %>">
        <div class="item">
          <div class="card">
            <img src="<%= image_path(list.cover_image_url) %>" class="card-img-top" alt="image">
            <div class="card-body pt-2">
              <h4 class="mb-0"><%= list.title %></h4>
            </div>
          </div>
        </div>
      </a>
      <% end %>
    </div>

    <!-- Section Categorias -->
    <div class="header-large-title mt-5">
      <h1 class="title">Categorias</h1>
    </div>

    <%= render "catalogo/categorias_list", categs: @categs %>

  </div>
  <!-- * App Capsule -->


</body>