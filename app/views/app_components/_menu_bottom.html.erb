<% _signed_in = signed_in? %>

<!-- App Bottom Menu -->
<%= render "app_components/search_header" %>

<div class="appBottomMenu">
  <a href="<%= root_path %>" class="item vibrate <%= current_page?(root_path) ? 'active' : '' %>">
    <div class="col">
      <ion-icon name="home-outline"></ion-icon>
      <strong>Início</strong>
    </div>
  </a>

  <a href="<%= catalogo_path %>" class="item vibrate <%= current_page?(catalogo_path) || request.path_info.include?('/categoria/') || request.path_info.include?('/bairro/') ? 'active' : '' %>">
    <div class="col">
      <ion-icon name="layers-outline"></ion-icon>
      <strong>Catálogo</strong>
      <span class="badge badge-danger"><%= Profile.active.count %></span>
    </div>
  </a>

  <a href="#" class="item vibrate toggle-searchbox <%= current_page?(buscar_path) ? 'active' : '' %>">
    <div class="col">
        <ion-icon name="search-outline" role="img" class="md hydrated"></ion-icon>
        <strong>Buscar</strong>
    </div>
  </a>

  <a href="<%= explorar_path %>" class="item vibrate <%= current_page?(explorar_path) ? 'active' : '' %>">
    <div class="col">
      <ion-icon name="compass-outline"></ion-icon>
      <strong>Explorar</strong>
    </div>
  </a>

  <!-- Signed in -->
  <% if _signed_in %>
    <!-- Business -->
    <% if current_user.is_business %>
    <% active = current_page?(profile_path current_user.profile.username) || current_page?(edit_profile_path current_user.profile) ? "active" : "" %>
    <a href="<%= current_user.profile.profile_path %>" class="item vibrate <%= active %>">
      <div class="col">
        <ion-icon name="person-outline"></ion-icon>
        <strong>Meu Perfil</strong>
      </div>
    </a>
    <!-- Consumer -->
    <% else %>
    <a href="<%= bookmarks_path %>" class="item vibrate <%= current_page?(bookmarks_path) ? 'active' : '' %>">
    <div class="col">
      <ion-icon name="bookmark-outline"></ion-icon>
      <strong>Salvos</strong>
    </div>
  </a>
    <% end %>
  <!-- Not signed in -->
  <% else %>
  <a href="<%= signin_path %>" class="item vibrate <%= current_page?(signin_path) ? 'active' : '' %>">
    <div class="col">
      <ion-icon name="person-add-outline"></ion-icon>
      <strong>Login</strong>
    </div>
  </a>
  <% end %>
</div>
<!-- * App Bottom Menu -->