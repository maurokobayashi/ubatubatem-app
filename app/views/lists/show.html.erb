<% @tag_title = "#{@list.title} | ubatubatem.com" %>
<% @tag_description = "Catálogo online de Pequenos Negócios de Ubatuba - #CompreDoPequeno" %>
<body>

  <%= render "app_components/header", classes: "bg-primary text-light flat", left_button: :back, right_buttons: [:options], back_link: root_path %>

  <!-- App Capsule -->
  <div id="appCapsule" class="mt-3 mb-5">

    <!-- Search Results -->
    <% if @profiles.count > 0 %>

    <div class="header-large-title">
      <h1 class="title">
        <%= "#{@list.title}" %>
      </h1>
      <h4 class="subtitle">
        <%= @list.subtitle %>
      </h4>
    </div>
    <ul class="listview image-listview media search-result mt-2 mb-2">
      <% @profiles.each do |profile| %>
        <%= render 'catalogo/search_result', profile: profile %>
      <% end %>
    </ul>

    <% end %>


  </div>
  <!-- * App Capsule -->

</body>

<script type="text/javascript">
$(document).ready(function () {
  mp_track("<%= MixPanel::LIST_VIEW %>", {
    "param_list": "<%= @list.title %>"
  });
});
</script>