<body>

  <%= render 'app_components/loader' %>
  <%= render 'app_components/menu_bottom' %>
  <%= render 'app_components/header' %>


  <!-- Action Sheet Share -->
  <div class="modal fade action-sheet inset" id="action-sheet-share" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Compartilhar</h5>
        </div>
        <div class="modal-body">
          <ul class="action-button-list">
            <li>
              <a href="#" class="btn btn-list" data-dismiss="modal">
                <span><ion-icon name="logo-whatsapp"></ion-icon>WhatsApp</span>
              </a>
            </li>
            <li>
              <a href="#" class="btn btn-list" data-dismiss="modal">
                <span><ion-icon name="logo-instagram"></ion-icon>Instagram</span>
              </a>
            </li>
            <li>
              <a href="#" class="btn btn-list" data-dismiss="modal">
                <span><ion-icon name="logo-facebook"></ion-icon>Facebook</span>
              </a>
            </li>
            <li>
              <a href="#" class="btn btn-list" data-dismiss="modal">
                <span><ion-icon name="logo-twitter"></ion-icon>Twitter</span>
              </a>
            </li>
            <li>
              <a href="#" class="btn btn-list" data-dismiss="modal">
                <span><ion-icon name="copy-outline"></ion-icon>Copiar link</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- * Action Sheet Share -->

  <!-- Action Sheet Comment -->
  <div class="modal fade action-sheet" id="action-sheet-comment" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Escreva o seu comentário</h5>
        </div>
        <div class="modal-body">
          <div class="action-sheet-content">
            <form>
              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="name3">Nome</label>
                  <input type="text" class="form-control" id="name"
                  placeholder="Seu nome">
                  <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                  </i>
                </div>
              </div>

              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="comment">Comentário</label>
                  <textarea type="text" class="form-control" id="comment"
                  placeholder="Seu comentário"></textarea>
                  <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                  </i>
                </div>
              </div>
              <div class="form-group basic">
                <button type="button" class="btn btn-primary btn-block btn-sm"
                data-dismiss="modal">Publicar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- * Action Sheet Comment -->

  <!-- Dialog Delivery -->
  <div class="modal fade dialogbox" id="dialog-delivery" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Regiões de entrega</h5>
        </div>
        <div class="modal-body align-left">
          <p class="font-13">
            Praia Grande, Itaguá, Centro, Estufa I, Estufa II, Jardim Carolina, Perequê Açu
            <strong class="display-block mt-2">Taxa de entrega: R$ 4</strong>
          </p>
        </div>
        <div class="modal-footer">
          <div class="btn-inline">
            <a href="#" class="btn btn-text-primary" data-dismiss="modal">Fechar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- * Dialog Delivery -->

  <!-- Dialog Horários -->
  <div class="modal fade dialogbox" id="dialog-horarios" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Horários de funcionamento</h5>
        </div>
        <div class="modal-body mb-2 align-left">
          <ul class="font-13">
            <li>Segunda: 8h às 20h</li>
            <li>Terça: 8h às 20h</li>
            <li>Quarta: 8h às 20h</li>
            <li>Quinta: 8h às 20h</li>
            <li>Sexta: 8h às 20h</li>
            <li>Sábado: 8h às 20h</li>
            <li>Domingo: fechado</li>
          </ul>
        </div>
        <div class="modal-footer">
          <div class="btn-inline">
            <a href="#" class="btn btn-text-primary" data-dismiss="modal">Fechar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- * Dialog Horários -->

  <!-- Dialog WhatsApp -->
  <div class="modal fade dialogbox" id="dialog-whatsapp" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-icon text-success">
          <ion-icon name="logo-whatsapp"></ion-icon>
        </div>
        <div class="modal-header">
          <h5 class="modal-title">WhatsApp</h5>
        </div>
        <div class="modal-body">
          Maycon Arcante Pães Artesanais
          <br>11 98045-6449
        </div>
        <div class="modal-footer">
          <div class="btn-list">
            <a href="https://wa.me/5511980456449?lang=pt_br" target="_system" class="btn btn-text-primary btn-block">Enviar Mensagem</a>
            <a href="javascript:;" class="btn btn-text-secondary btn-block" data-dismiss="modal">Fechar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- * Dialog WhatsApp -->


  <!-- Toast success -->
  <div id="toast-salvar" class="toast-box toast-bottom bg-success">
    <div class="in">
      <ion-icon name="checkmark-circle" class="text-white"></ion-icon>
      <div class="text text-white weight-5">
        Salvo na minha lista
      </div>
    </div>
    <button type="button" class="btn btn-sm btn-text-light close-button">OK</button>
  </div>
  <!-- * Toast success -->



  <!-- App Capsule -->
  <div id="appCapsule">

    <div class="section mt-2">
      <div class="profile-head">
        <div class="avatar">
          <%= image_tag @profile.avatar_url, class: "imaged w64 rounded" %>
        </div>
        <div class="in">
          <h3 class="name"><%= @profile.title %></h3>
          <h5 class="subtext"><%= @profile.tagline %></h5>
        </div>
      </div>
    </div>

    <div class="section mt-2 mb-2">
      <div class="profile-info">
        <div class="bio">
          <%= @profile.bio %>
        </div>
      </div>
    </div>

    <div class="section full mt-3">
      <ul class="listview listview-sm image-listview">
        <li>
          <a href="#" class="item" data-toggle="modal" data-target="#dialog-whatsapp">
            <div class="icon-box">
              <ion-icon name="logo-whatsapp"></ion-icon>
            </div>
            <div class="in">
              <div><%= @profile.whatsapp %></div>
              <span class="text-muted">enviar whatsapp</span>
            </div>
          </a>
        </li>
        <li>
          <a href="#" class="item" data-toggle="modal" data-target="#dialog-delivery">
            <div class="icon-box">
              <ion-icon name="bicycle-outline"></ion-icon>
            </div>
            <div class="in">
              <div><%= humanize_delivery_mode @profile.delivery %></div>
              <span class="text-muted">ver regiões</span>
            </div>
          </a>
        </li>
        <li>
          <a href="#" class="item" data-toggle="modal" data-target="#dialog-horarios">
            <div class="icon-box">
              <ion-icon name="time-outline"></ion-icon>
            </div>
            <div class="in">
              <div>Aberto hoje - 08h às 20h</div>
              <span class="text-muted">ver horários</span>
            </div>
          </a>
        </li>
        <li>
          <a href="<%= "https://www.instagram.com/#{@profile.instagram_account.username}" %>" target="_system" class="item">
            <div class="icon-box">
              <ion-icon name="logo-instagram"></ion-icon>
            </div>
            <div class="in">
              <div><%= "@#{@profile.instagram_account.username}" %></div>
            </div>
          </a>
        </li>
        <li>
          <a href="javascript:;" onclick="toastbox('toast-salvar', 3000);" class="item">
            <div class="icon-box">
              <ion-icon name="bookmark-outline"></ion-icon>
            </div>
            <div class="in">
              <div>Salvar na minha lista</div>
            </div>
          </a>
        </li>
      </ul>
    </div>


    <div class="section full mt-3 bg-white">
      <div class="wide-block transparent p-0">
        <ul class="nav nav-tabs lined iconed" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab">
              <ion-icon name="camera-outline"></ion-icon>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab2" role="tab">
              <ion-icon name="chatbox-outline"></ion-icon>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#tab3" role="tab">
              <ion-icon name="analytics-outline"></ion-icon>
            </a>
          </li>
        </ul>
      </div>
    </div>


    <!-- tab content -->
    <div class="section full mb-2">
      <div class="tab-content">

        <!-- TAB1: fotos -->
        <div class="tab-pane fade show active" id="tab1" role="tabpanel">
          <div class="mt-2 pr-2 pl-2">
            <div class="row">
              <div class="col-4 mb-2">
                <img src="https://scontent-gru1-1.cdninstagram.com/v/t51.2885-15/e35/s320x320/95056050_176716443797367_688055900148956417_n.jpg?_nc_ht=scontent-gru1-1.cdninstagram.com&_nc_cat=103&_nc_ohc=DrRr2mgqvFcAX_5DKQ9&oh=2fabf4a758d8a10a55da6a8f45b31867&oe=5ED8D014" alt="image" class="imaged w-100">
              </div>
              <div class="col-4 mb-2">
                <img src="https://scontent-gru2-2.cdninstagram.com/v/t51.2885-15/e35/c0.180.1440.1440a/s320x320/95260378_569583043688789_9113223970536863506_n.jpg?_nc_ht=scontent-gru2-2.cdninstagram.com&_nc_cat=105&_nc_ohc=YojLOs3VynwAX-9M5X9&oh=a771dde45c670016ef56bb3a321145b5&oe=5ED6CC6B" alt="image" class="imaged w-100">
              </div>
              <div class="col-4 mb-2">
                <img src="https://scontent-gru1-1.cdninstagram.com/v/t51.2885-15/e35/s320x320/95606800_3388686154492729_8138001469538034696_n.jpg?_nc_ht=scontent-gru1-1.cdninstagram.com&_nc_cat=101&_nc_ohc=5zPIkueOyW4AX92JpHV&oh=62181642698c5d8bd5d0a7a275ff816d&oe=5ED6DA0B" alt="image" class="imaged w-100">
              </div>
              <div class="col-4 mb-2">
                <img src="https://scontent-gru1-1.cdninstagram.com/v/t51.2885-15/e35/c0.128.1080.1080a/s320x320/93947545_2912699082290096_7504398645728201335_n.jpg?_nc_ht=scontent-gru1-1.cdninstagram.com&_nc_cat=108&_nc_ohc=7S5LJ2ZL32sAX83PQ9Q&oh=c7249736df99ddd85d91ae1fe796b46f&oe=5ED60FA9" alt="image" class="imaged w-100">
              </div>
              <div class="col-4 mb-2">
                <img src="https://scontent-gru2-2.cdninstagram.com/v/t51.2885-15/e35/s320x320/94130150_158735915609796_7926300492169200883_n.jpg?_nc_ht=scontent-gru2-2.cdninstagram.com&_nc_cat=100&_nc_ohc=fyYR4WhiwFwAX95P6JQ&oh=69488de4d7e16a6ba8f52f0bf96a9ce9&oe=5ED86153" alt="image" class="imaged w-100">
              </div>
              <div class="col-4 mb-2">
                <img src="https://scontent-gru2-2.cdninstagram.com/v/t51.2885-15/e35/c0.120.960.960a/s320x320/93570811_2571040616472348_657440992531038182_n.jpg?_nc_ht=scontent-gru2-2.cdninstagram.com&_nc_cat=100&_nc_ohc=WUQFJCSEw5YAX8HGaVN&oh=c126a72a20a26083daacd74efb09c2ca&oe=5ED8BC2C" alt="image" class="imaged w-100">
              </div>
            </div>
          </div>
        </div>
        <!-- * TAB1 -->

        <!-- * TAB2: comentários -->
        <div class="tab-pane fade" id="tab2" role="tabpanel">
          <div class="section full mt-2 mb-2">
            <div class="section-title">2 Comentários</div>
            <div class="wide-block border-none pt-2 pb-2">

              <!-- comment block -->
              <div class="comment-block">
                <div class="item">
                  <div class="avatar">
                    <img src="assets/img/sample/avatar/avatar1.jpg" alt="avatar" class="imaged w32 rounded">
                  </div>
                  <div class="in">
                    <div class="comment-header">
                      <h4 class="title">Diego Morata</h4>
                      <span class="time">há 2 dias</span>
                    </div>
                    <div class="text">
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </div>
                    <div class="comment-footer">
                      <a href="javascript:;" class="comment-button">
                        <ion-icon name="heart-outline"></ion-icon>
                        Curtir (2)
                      </a>
                      <a href="javascript:;" class="comment-button">
                        <ion-icon name="flag-outline"></ion-icon>
                        Denunciar
                      </a>
                    </div>
                  </div>
                </div>
                <div class="item">
                  <div class="avatar">
                    <img src="assets/img/sample/avatar/avatar3.jpg" alt="avatar" class="imaged w32 rounded">
                  </div>
                  <div class="in">
                    <div class="comment-header">
                      <h4 class="title">Henry Itondo</h4>
                      <span class="time">há 5 dias</span>
                    </div>
                    <div class="text">
                      Sed laoreet leo eget maximus ultricies. Nunc vitae enim facilisis tortor aliquet
                      ullamcorper
                      nec at tortor.
                    </div>
                    <div class="comment-footer">
                      <a href="javascript:;" class="comment-button">
                        <ion-icon name="heart" class="text-danger"></ion-icon>
                        Curtiu (4)
                      </a>
                      <a href="javascript:;" class="comment-button">
                        <ion-icon name="flag-outline"></ion-icon>
                        Denunciar
                      </a>
                    </div>
                  </div>
                </div>
              </div>
              <!-- * comment block -->

            </div>

            <div class="section mt-2 mb-4">
              <button type="button" class="btn btn-primary btn-sm btn-block" data-toggle="modal" data-target="#action-sheet-comment">Escrever comentário</button>
            </div>

          </div>
        </div>
        <!-- * friends -->

        <!-- settings -->
        <div class="tab-pane fade" id="tab3" role="tabpanel">
          <ul class="listview image-listview text flush transparent pt-1">
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Visualizações</div>
                  <span class="text-muted">68</span>
                </div>
              </div>
            </li>
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Salvo em listas</div>
                  <span class="text-muted">12</span>
                </div>
              </div>
            </li>
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Mensagens por WhatsApp</div>
                  <span class="text-muted">6</span>
                </div>
              </div>
            </li>
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Visitas no Instagram</div>
                  <span class="text-muted">6</span>
                </div>
              </div>
            </li>
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Compartilhamentos</div>
                  <span class="text-muted">2</span>
                </div>
              </div>
            </li>
            <li>
              <div class="item">
                <div class="in">
                  <div class="small">Comentários</div>
                  <span class="text-muted">2</span>
                </div>
              </div>
            </li>
          </ul>
        </div>
        <!-- * settings -->
      </div>
    </div>
    <!-- * tab content -->

  </div>
  <!-- * App Capsule -->

  <!-- App Bottom Menu -->
  <div class="appBottomMenu">
    <a href="index.html" class="item">
      <div class="col">
        <ion-icon name="home-outline"></ion-icon>
      </div>
    </a>
    <a href="busca.html" class="item">
      <div class="col">
        <ion-icon name="search-outline"></ion-icon>
      </div>
    </a>
    <a href="#" class="item">
      <div class="col">
        <div class="action-button">
          <ion-icon name="add-outline"></ion-icon>
        </div>
      </div>
    </a>
    <a href="favoritos.html" class="item">
      <div class="col">
        <ion-icon name="bookmark-outline"></ion-icon>
      </div>
    </a>
    <a href="perfil.html" class="item active">
      <div class="col">
        <ion-icon name="person-outline"></ion-icon>
      </div>
    </a>
  </div>
  <!-- * App Bottom Menu -->


