<body>
  <%= render "app_components/header", classes: "bg-primary text-light flat", right_buttons: [:options] %>
  <div class="extraHeader p-0">
    <ul class="nav nav-tabs lined" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-selected="true">
          <ion-icon name="funnel-outline"></ion-icon>Categorias
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#tab2" role="tab" aria-selected="false">
          <ion-icon name="location-outline"></ion-icon>Bairros
        </a>
      </li>
    </ul>
  </div>

  <!-- App Capsule -->
  <div id="appCapsule" class="extra-header-active mt-3 mb-5">
    <div class="tab-content mt-1">

      <!-- categorias tab -->
      <div class="tab-pane fade active show" id="tab1" role="tabpanel">
        <div class="header-large-title">
          <h1 class="title">Categorias</h1>
          <h4 class="subtitle"><%= Profile.count %> pequenos negócios cadastrados</h4>
        </div>
        <%= render "categories_list", categs: @categs %>
      </div>
      <!-- * categorias tab -->

      <!-- localização tab -->
      <div class="tab-pane fade" id="tab2" role="tabpanel">
        <div class="header-large-title">
          <h1 class="title">Bairros</h1>
          <h4 class="subtitle"><%= Profile.count %> pequenos negócios cadastrados</h4>
        </div>
        <%= render "categories_list", categs: @categs %>
      </div>
      <!-- * localização tab -->

    </div>
  </div>
  <!-- * App Capsule -->


</body>